<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fulibaigong.tsai.ui"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-feature android:name="android.hardware.camera" />

    <!-- Add this permission to get access to the camera. -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
 <!-- Permissions required for GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
 <!-- Optional permission for App measurement to run. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fulibaigong.tsai.ui.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.IndexActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fulibaigong.tsai.ui.ProInfoActivity"
            android:label="@string/title_activity_pro_intro"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fulibaigong.tsai.ui.TakePictureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fulibaigong.tsai.ui.ChoosePictureActivity"
            android:label="@string/produce_poscards"
            android:screenOrientation="portrait" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail2" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail3" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail4" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail5" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail6" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail7" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail8" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail9" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.fulibaigong.tsai.ui.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.mapsnav"
            android:label="導覽" >
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.Area"
            android:label="@string/title_activity_area" >
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.Showarea"
            android:label="@string/title_activity_showarea"
            android:parentActivityName="com.fulibaigong.tsai.ui.Area" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fulibaigong.tsai.ui.Area" />
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.ImageTargets"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:launchMode="singleTask" >
        </activity>

        <!-- Include the AdActivity and InAppPurchaseActivity configChanges and themes. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity
            android:name="com.google.android.gms.appinvite.PreviewActivity"
            android:exported="true"
            android:theme="@style/Theme.AppInvite.Preview" >
            <intent-filter>
                <action android:name="com.google.android.gms.appinvite.ACTION_PREVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION" />

        <provider
            android:name="com.google.android.gms.measurement.AppMeasurementContentProvider"
            android:authorities="com.fulibaigong.tsai.ui.google_measurement_service"
            android:exported="false" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>