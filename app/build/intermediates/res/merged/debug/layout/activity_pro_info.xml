<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fulibaigong.tsai.ui.ProInfoActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/infoBtn"
            android:layout_marginLeft="-3dp"
            android:src="@drawable/jianjieb"
            android:layout_marginBottom="-2dp"
            android:onClick="onFInfo"
            android:layout_marginRight="-8dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/guiBtn"
            android:onClick="onFGui"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/map"
            android:scaleType="centerInside"
            android:layout_marginRight="-8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/acBtn"
            android:onClick="onFInteract"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/game"
            android:scaleType="fitCenter"
            android:layout_marginRight="-8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/colBtn"
            android:onClick="onFCollect"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/prize"
            android:scaleType="fitCenter"
            android:layout_marginRight="-2dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/fragment_container"
        android:layout_above="@+id/linearLayout">

    </FrameLayout>

</RelativeLayout>
