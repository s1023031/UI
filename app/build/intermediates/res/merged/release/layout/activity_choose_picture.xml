<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fulibaigong.tsai.ui.ChoosePictureActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/poscard1"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:background="@drawable/poscard1"
                android:onClick="onTakePicture" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/poscard2"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:background="@drawable/poscard2"
                android:onClick="onTakePicture" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/poscard3"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/poscard3"
                android:onClick="onTakePicture" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/poscard4"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/poscard4"
                android:onClick="onTakePicture" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
