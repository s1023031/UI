<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fulibaigong.tsai.ui" >


    <uses-feature android:name="android.hardware.camera" />

    <!--             Add this permission to get access to the camera. -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fulibaigong.tsai.ui.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.IndexActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fulibaigong.tsai.ui.ProInfoActivity"
            android:label="@string/title_activity_pro_intro"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fulibaigong.tsai.ui.TakePictureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fulibaigong.tsai.ui.ChoosePictureActivity"
            android:label="@string/produce_poscards"
            android:screenOrientation="portrait" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail2" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail3" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail4" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail5" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail6" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail7" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail8" />
        <activity android:name="com.fulibaigong.tsai.ui.masterdetail9" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.mapsnav"
            android:label="導覽" >
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.Area"
            android:label="@string/title_activity_area" >
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.Showarea"
            android:label="@string/title_activity_showarea"
            android:parentActivityName="com.fulibaigong.tsai.ui.Area" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fulibaigong.tsai.ui.Area" />
        </activity>
        <activity
            android:name="com.fulibaigong.tsai.ui.ImageTargets"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:launchMode="singleTask" >
        </activity>

    </application>

</manifest>
